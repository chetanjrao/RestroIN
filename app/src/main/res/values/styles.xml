<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlActivated">#FFD700</item>
        <item name="android:colorControlNormal">#FFD700</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:statusBarColor">#000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RecyclerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:colorControlActivated">#000</item>
        <item name="android:colorControlNormal">#000</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3e3e3e</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#3e3e3e</item>
        <item name="android:colorActivatedHighlight">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:colorControlActivated">#707070</item>
        <item name="android:colorControlNormal">#707070</item>
    </style>

    <style name="ImageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="android:colorControlActivated">#FFD700</item>
        <item name="android:colorControlNormal">#FFD700</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">
            @android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">
            @android:anim/slide_out_right</item>
    </style>


</resources>
