<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ProgressBar
        android:layout_width="20dp"
        android:id="@+id/reviewsProgressBar"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_height="20dp" />
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:theme="@style/EditTextTheme"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="-30dp"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/review_layout_full"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30sp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_exit"
            android:tint="#363636"
            android:id="@+id/popup_exit"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="30sp" />

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:text="Write your Review"
            android:fontFamily="@font/raleway"
            android:textColor="#363636"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="23sp"
            android:id="@+id/enterotp_text"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/enterotp_text"
            android:text="Your Rating: "
            android:layout_marginTop="15sp"
            android:textColor="#363636"
            android:fontFamily="@font/raleway"
            android:textSize="17sp"
            android:id="@+id/enter_rating_text"
            android:layout_height="wrap_content" />

        <RatingBar
            android:theme="@style/ImageTheme"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:layout_marginTop="3sp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:rating="3"
            android:layout_marginStart="-20dp"
            android:id="@+id/rating_bar"
            android:layout_below="@id/enter_rating_text"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/review_layout"
            android:layout_marginTop="5dp"
            android:layout_below="@id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Write your review"
                android:inputType="text"
                android:theme="@style/EditTextTheme"
                style="@style/EditTextTheme"
                android:id="@+id/review_edit_text"
                android:textAlignment="gravity"
                android:gravity="start"
                android:fontFamily="@font/raleway"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:text="Submit Review"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="#fff"
            android:fontFamily="@font/raleway"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_below="@id/review_layout"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/review_submit_button"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button_background_blue_light"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>
</RelativeLayout>