<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:theme="@style/EditTextTheme"
    android:layout_height="match_parent"
    tools:context=".EditBooking">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ProgressBar
        android:layout_width="20dp"
        android:id="@+id/ProgressBar"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_height="20dp" />

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:elevation="3dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:id="@+id/toolbar_layout"
            android:layout_height="60dp">

            <ImageButton
                android:layout_width="60dp"
                android:id="@+id/exit_button"
                android:src="@drawable/ic_back"
                android:tint="@color/colorPrimary"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/transparent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Your Booking"
                android:fontFamily="@font/raleway"
                android:textSize="21sp"
                android:layout_toEndOf="@id/exit_button"
                android:layout_marginStart="8sp"
                android:layout_centerVertical="true"
                android:textColor="#363636"
                android:textStyle="bold"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_marginTop="5dp"
            android:layout_below="@id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Restaurant Name"
                    android:enabled="false"
                    android:textColor="#363636"
                    android:id="@+id/restaurant_name"
                    android:fontFamily="@font/raleway"
                    android:text="Hindusthan"
                    android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Guest Name"
                    android:id="@+id/guest_name"
                    android:enabled="false"
                    android:textColor="#363636"
                    android:fontFamily="@font/raleway"
                    android:text="Chethan Jagannatha Kulkarni"
                    android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Guest Email"
                    android:id="@+id/guest_email"
                    android:enabled="false"
                    android:textColor="#363636"
                    android:fontFamily="@font/raleway"
                    android:text="chethanjkulkarni@gmail.com"
                    android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Total Guests"
                    android:id="@+id/total_no_of_guests"
                    android:enabled="false"
                    android:textColor="#363636"
                    android:fontFamily="@font/raleway"
                    android:text="6"
                    android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Arrival"
                    android:id="@+id/visiting_time"
                    android:enabled="false"
                    android:textColor="#363636"
                    android:fontFamily="@font/raleway"
                    android:text="12/10 12:00PM"
                    android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:id="@+id/couponLayout"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Coupon Applied"
                    android:id="@+id/couponSelected"
                    android:enabled="false"
                    android:textColor="#363636"
                    android:fontFamily="@font/raleway"
                    android:text="befree"
                    android:layout_height="match_parent" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:fontFamily="@font/raleway"
                android:text="Cancel Booking"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:id="@+id/cancelButton"
                android:textColor="#fff"
                android:background="@drawable/button_background_blue_light"
                android:layout_height="wrap_content" />

        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>