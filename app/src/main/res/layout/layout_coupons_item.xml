<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <in.restroin.restroin.utils.SmoothCheckBox
        android:layout_width="40dp"
        app:color_checked="#3ca101"
        app:color_tick="#fff"
        android:id="@+id/coupon_checkbox"
        app:stroke_width="0dp"
        android:layout_centerVertical="true"
        app:color_unchecked_stroke="@android:color/transparent"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/coupon_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Chill 10"
            android:id="@+id/coupon_name"
            android:fontFamily="@font/raleway"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:textColor="#363636"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/coupon_name"
            android:textColor="#363636"
            android:id="@+id/coupon_description"
            android:text="Get 10% off"
            android:textSize="19sp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/raleway"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/changing_backgroundView"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:background="#3ca101"
        android:layout_height="4dp" />


</RelativeLayout>