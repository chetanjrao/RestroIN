<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/restaurant_image"
            android:src="@mipmap/restro20"
            android:layout_height="130dp" />

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/raleway"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:textColor="#363636"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:id="@+id/restaurant_name"
            android:layout_below="@id/restaurant_image"
            android:text="Hindustan Family Restaurant"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/raleway"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:textColor="#363636"
            android:layout_marginStart="5dp"
            android:id="@+id/restaurant_location"
            android:layout_below="@id/restaurant_name"
            android:text="Yelahanka, North Bangalore"
            android:layout_height="wrap_content" />

        <RatingBar
            android:layout_width="wrap_content"
            android:rating="4"
            android:layout_marginTop="3dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/restaurant_location"
            android:id="@+id/restaurant_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="@font/raleway"
            android:textSize="18sp"
            android:layout_marginTop="3dp"
            android:textColor="#363636"
            android:layout_marginStart="5dp"
            android:id="@+id/restaurant_offers"
            android:layout_below="@id/restaurant_rating"
            android:text="4 Special Offers"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>