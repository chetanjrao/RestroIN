<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="6dp"
        android:background="@drawable/review_card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginStart="6dp"
            android:layout_marginTop="3dp"
            android:baselineAligned="false"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="6dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="2.75"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Restaurant Name: "
                    android:fontFamily="@font/raleway"
                    android:textColor="#363636"
                    android:textSize="14sp"
                    android:id="@+id/restaurant_name_text"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Chetu "
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway"
                    android:textColor="#363636"
                    android:textSize="14sp"
                    android:layout_toEndOf="@id/restaurant_name_text"
                    android:layout_marginStart="5dp"
                    android:id="@+id/restaurant_name"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Arrival: "
                        android:fontFamily="@font/raleway"
                        android:textColor="#363636"
                        android:textSize="14sp"
                        android:id="@+id/visiting_time_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="20/10 3:00AM "
                        android:textStyle="bold"
                        android:fontFamily="@font/raleway"
                        android:textColor="#363636"
                        android:textSize="14sp"
                        android:layout_toEndOf="@id/visiting_time_text"
                        android:layout_marginStart="5dp"
                        android:id="@+id/visiting_time"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="No. of Guests: "
                        android:fontFamily="@font/raleway"
                        android:textColor="#363636"
                        android:textSize="14sp"
                        android:id="@+id/guests_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1 "
                        android:textStyle="bold"
                        android:fontFamily="@font/raleway"
                        android:textColor="#363636"
                        android:textSize="14sp"
                        android:layout_toEndOf="@id/guests_text"
                        android:layout_marginStart="5dp"
                        android:id="@+id/no_of_guests"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1.25"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/booking_status_image"
                        android:layout_width="25dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_pending"
                        android:layout_height="25dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/raleway"
                        android:text="Pending"
                        android:textColor="#363636"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/booking_status_image"
                        android:textAlignment="center"
                        android:id="@+id/booking_status"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>