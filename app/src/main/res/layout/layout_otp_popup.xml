<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="-30dp"
    android:background="@drawable/dark_bottom_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:layout_width="20dp"
        android:id="@+id/otpProgressBar"
        android:indeterminateTint="#fff"
        android:layout_centerInParent="true"
        android:layout_height="20dp" />
<android.support.v7.widget.CardView app:cardCornerRadius="4dp"
    android:elevation="4dp"
    android:id="@+id/otp_layout_complete"
    android:layout_margin="10dp"
    android:layout_centerVertical="true"
    android:layout_width="match_parent"
    android:theme="@style/EditTextTheme"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30sp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_exit"
            android:tint="#363636"
            android:id="@+id/popup_exit"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="30sp" />

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:text="Enter your OTP"
            android:fontFamily="@font/raleway"
            android:textColor="#363636"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="23sp"
            android:id="@+id/enterotp_text"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/otp_layout"
            android:layout_marginTop="15sp"
            android:layout_below="@id/enterotp_text"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Enter the OTP"
                android:inputType="number"
                android:id="@+id/otp_edit_text"
                android:textAlignment="center"
                android:fontFamily="@font/raleway"
                android:layout_height="match_parent" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:text="Validate"
            android:textColor="#fff"
            android:fontFamily="@font/raleway"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_below="@id/otp_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/otp_button"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/button_background_blue_light"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>